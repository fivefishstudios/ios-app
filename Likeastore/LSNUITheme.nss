ItemView {
    background-color: #FFFFFF;
    corner-radius: 3px;
    shadow-color: #c0c0c0;
    shadow-offset: 0, 1.0;
    shadow-opacity: 0.3;
    shadow-radius: 1px;
}

ItemViewTitle {
    font-size: 16px;
    font-color: #444444;
}

ItemViewDescription {
    font-size: 14px;
    font-color: #666666;
}

LoginButton {
    corner-radius: 3px;
}

LoginField {
    corner-radius: 3px;
    padding: 0 12px;
}

RoundedButton {
    corner-radius: 3px;
}
